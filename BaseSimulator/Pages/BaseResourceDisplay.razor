<div class="row pr-2">
    <div class="col">
        <div class="d-flex">
            <div class="color-labor p-1" style="width: 50px">
                @this.Game.ItemStorage.BaseApItem.Name
            </div>
            <div class="text-right text-white bg-dark p-1" style="width: 100px">
                @($"{this.Game.ItemStorage.BaseApItemData.Count}/{this.Game.GetMaxLabor()}")
            </div>
        </div>
    </div>
    <div class="col">
        <div class="d-flex">
            <div class="color-power p-1" style="width: 50px">
                Power
            </div>
            <div class="text-right text-white bg-dark p-1" style="width: 100px">
                @($"{this.Game.GetUsedPower()}/{this.Game.GetMaxPower()}")
            </div>
        </div>
    </div>
    <div class="col">
        <div class="d-flex">
            <div class="color-gold p-1" style="width: 50px">
                @this.Game.ItemStorage.GoldItem.Name
            </div>
            <div class="text-right text-white bg-dark p-1" style="width: 100px">
                @this.Game.ItemStorage.GoldItemData.Count
            </div>
        </div>
    </div>
</div>

@code {
    [CascadingParameter] public Game Game { get; set; }
}
